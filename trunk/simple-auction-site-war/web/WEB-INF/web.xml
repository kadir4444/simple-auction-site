<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

<!-- <web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Project5376.LoginServlet</servlet-class>
        <init-param>
            <param-name>InitParam1</param-name>
            <param-value>InitParam1</param-value>
        </init-param>
        <init-param>
            <param-name>username</param-name>
            <param-value>userA</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>passwd</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>homepageServlet</servlet-name>
        <servlet-class>Project5376.homepageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editProfile</servlet-name>
        <servlet-class>Project5376.editProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addAuctionServlet</servlet-name>
        <servlet-class>Project5376.addAuctionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlaceBid</servlet-name>
        <servlet-class>Project5376.PlaceBid</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homepageServlet</servlet-name>
        <url-pattern>/homepageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editProfile</servlet-name>
        <url-pattern>/editProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addAuctionServlet</servlet-name>
        <url-pattern>/addAuctionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlaceBid</servlet-name>
        <url-pattern>/PlaceBid</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        </welcome-file-list>
    </web-app>
